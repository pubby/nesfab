            tay
            clc
            lda (&puf_note_table_ptr.a), y
            adc puf_exp1_pitch_bend+0
            if __expansion_audio == _MMC5
                sta $5002
            if __expansion_audio == _RNBW
                sta $41A1
            iny
            lda (&puf_note_table_ptr.a), y
            adc puf_exp1_pitch_bend+1
            if __expansion_audio == _RNBW
                ora #%10000000
                and #%10001111
            else
                and #%10000111
            if __expansion_audio != _RNBW
                cmp puf_exp1_pitch_hi
                beq done_sta_exp1_pitch
            if __expansion_audio == _MMC5
                sta $5003
            if __expansion_audio == _RNBW
