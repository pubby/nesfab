    label disable_square2

        // Triangle

        lda puf_enable
        and #%0100
        beq disable_triangle

        ldx puf_triangle_stack
        jsr load_ptr_from_stack

        ldy puf_triangle_vol_duty_y
        jsr read_macro
        sty puf_triangle_vol_duty_y
        and #%1111
        ora #%10000000
        cpy #0
        bne sta_4008
        ldx puf_triangle_stack
        stx puf_triangle_stack_next
        jsr write_silence
        jsr reset_triangle
        lda #0
    label sta_4008
