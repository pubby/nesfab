        adc puf_square2_note
        tay
        clc
        lda (&puf_note_table_ptr.a), y
        adc puf_square2_pitch_bend+0
        sta $4006
        iny
        lda (&puf_note_table_ptr.a), y
        adc puf_square2_pitch_bend+1
